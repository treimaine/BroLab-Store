# BroLab Entertainment - Production Environment Template
# Compatible Windows/Linux/macOS pour o2switch
# Copy to .env.production and fill with real values

NODE_ENV=production
PORT=5000

# Database Configuration (Supabase)
DATABASE_URL=postgresql://your-project.supabase.co:5432/postgres
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# API Keys Production
STRIPE_SECRET_KEY=sk_live_your-live-key
VITE_STRIPE_PUBLIC_KEY=pk_live_your-live-key

# WordPress/WooCommerce API
WP_API_URL=https://brolabentertainment.com/wp-json/wp/v2
WC_API_URL=https://brolabentertainment.com/wp-json/wc/v3
WC_CONSUMER_KEY=ck_your-live-key
WC_CONSUMER_SECRET=cs_your-live-secret
VITE_WC_KEY=ck_your-live-key
VITE_WC_SECRET=cs_your-live-secret

# Email Configuration (o2switch SMTP)
SMTP_HOST=pro1.mail.ovh.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=contact@brolabentertainment.com
SMTP_PASS=your-email-password

# Security
SESSION_SECRET=your-64-char-hex-secret
JWT_SECRET=your-jwt-secret

# PayPal (Production)
VITE_PAYPAL_CLIENT_ID=your-live-paypal-client

# Application URLs
CLIENT_URL=https://your-domain.com
SERVER_URL=https://your-domain.com

# Monitoring & Analytics
ENABLE_LOGGING=true
LOG_LEVEL=info

# File Upload Limits
MAX_FILE_SIZE=50000000
UPLOAD_RATE_LIMIT=20
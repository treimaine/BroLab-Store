# Dashboard Configuration Environment Variables
# Copy this file to .env and customize the values for your environment

# =============================================================================
# DASHBOARD FEATURE FLAGS
# =============================================================================

# Enable/disable real-time updates (default: true)
VITE_FEATURE_REALTIME_UPDATES=true

# Enable/disable analytics charts (default: true)
VITE_FEATURE_ANALYTICS_CHARTS=true

# Enable/disable advanced filters (default: true)
VITE_FEATURE_ADVANCED_FILTERS=true

# Enable/disable performance monitoring (default: false)
VITE_FEATURE_PERFORMANCE_MONITORING=false

# Enable/disable error tracking (default: false)
VITE_FEATURE_ERROR_TRACKING=false

# Enable/disable offline support (default: false)
VITE_FEATURE_OFFLINE_SUPPORT=false

# =============================================================================
# DASHBOARD UI CONFIGURATION
# =============================================================================

# Animation duration in milliseconds (default: 300)
VITE_ANIMATION_DURATION=300

# Number of skeleton items to show while loading (default: 6)
VITE_SKELETON_ITEMS=6

# Maximum number of activity items to display (default: 20)
VITE_MAX_ACTIVITY_ITEMS=20

# =============================================================================
# DASHBOARD PAGINATION CONFIGURATION
# =============================================================================

# Number of orders per page (default: 10)
VITE_ORDERS_PER_PAGE=10

# Number of downloads per page (default: 15)
VITE_DOWNLOADS_PER_PAGE=15

# Number of activity items per page (default: 20)
VITE_ACTIVITY_PER_PAGE=20

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache TTL values in milliseconds
VITE_CACHE_TTL_USER_STATS=300000      # 5 minutes
VITE_CACHE_TTL_FAVORITES=600000       # 10 minutes
VITE_CACHE_TTL_ORDERS=900000          # 15 minutes
VITE_CACHE_TTL_DOWNLOADS=1800000      # 30 minutes
VITE_CACHE_TTL_ACTIVITY=120000        # 2 minutes
VITE_CACHE_TTL_CHART_DATA=3600000     # 1 hour

# Request configuration
VITE_REQUEST_TIMEOUT=10000            # 10 seconds
VITE_REQUEST_RETRIES=3                # 3 retries
VITE_REQUEST_RETRY_DELAY=1000         # 1 second
VITE_MAX_CONCURRENT_REQUESTS=5        # 5 concurrent requests

# Real-time configuration
VITE_REALTIME_RECONNECT_INTERVAL=5000     # 5 seconds
VITE_REALTIME_MAX_RETRIES=10              # 10 retries
VITE_REALTIME_HEARTBEAT_INTERVAL=30000    # 30 seconds
VITE_REALTIME_CONNECTION_TIMEOUT=15000    # 15 seconds

# WebSocket configuration
VITE_WS_URL=ws://localhost:3001           # WebSocket server URL

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API base URL (default: /api)
VITE_API_BASE_URL=/api

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Log level: debug, info, warn, error (default: info)
VITE_LOG_LEVEL=info

# Show performance metrics in development (default: false)
VITE_SHOW_PERFORMANCE=false

# Use mock data instead of real API calls (default: false)
VITE_USE_MOCK_DATA=false

# Enable performance profiler (default: false)
VITE_PERFORMANCE_PROFILER=false

# =============================================================================
# CURRENCY CONFIGURATION
# =============================================================================

# Currency locale for formatting (default: en-US)
VITE_CURRENCY_LOCALE=en-US

# Currency precision (decimal places) (default: 2)
VITE_CURRENCY_PRECISION=2

# Threshold for compact currency display (default: 1000000)
VITE_CURRENCY_COMPACT_THRESHOLD=1000000

# =============================================================================
# ERROR HANDLING CONFIGURATION
# =============================================================================

# Auto-hide error messages after this delay in milliseconds (default: 5000)
VITE_ERROR_AUTO_HIDE_DELAY=5000

# Maximum number of errors to show simultaneously (default: 3)
VITE_ERROR_MAX_SHOWN=3

# Error reporting sample rate (0.0 to 1.0) (default: 0.1)
VITE_ERROR_SAMPLE_RATE=0.1

# =============================================================================
# NOTES
# =============================================================================

# - All VITE_ prefixed variables are available in the frontend
# - Boolean values: use 'true' or 'false' (strings)
# - Numeric values: use plain numbers (will be parsed as integers)
# - If a variable is not set, the default value from the configuration will be used
# - Feature flags default to 'true' if not explicitly set to 'false'
# - Performance settings should be tuned based on your specific needs
# - Cache TTL values are in milliseconds (1000ms = 1 second)